<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/net"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFF8FE">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:padding="8dp"
        android:src="@drawable/tui_hei"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textColor="#FF151611"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_back" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/atv_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_item_set"
        android:drawableStart="@drawable/icon_fx"
        android:drawableEnd="@drawable/icon_jt"
        android:drawablePadding="8dp"
        android:paddingHorizontal="18dp"
        android:paddingVertical="20dp"
        android:text="Share"
        android:textColor="#FF151611"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/atv_plo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_item_set"
        android:drawableStart="@drawable/icon_pp"
        android:drawableEnd="@drawable/icon_jt"
        android:drawablePadding="8dp"
        android:paddingHorizontal="18dp"
        android:paddingVertical="20dp"
        android:text="Privacy Policy"
        android:textColor="#FF151611"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/atv_share" />


</androidx.constraintlayout.widget.ConstraintLayout>

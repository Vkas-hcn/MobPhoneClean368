<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/load"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFF8FE">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/tui_hei"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_bg_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-4dp"
        android:src="@drawable/yuan_1"
        app:layout_constraintBottom_toBottomOf="@+id/pg"
        app:layout_constraintEnd_toEndOf="@+id/pg"
        app:layout_constraintStart_toStartOf="@+id/pg"
        app:layout_constraintTop_toTopOf="@+id/pg" />

    <ImageView
        android:id="@+id/img_bg_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/yuan_2"
        app:layout_constraintBottom_toBottomOf="@+id/pg"
        app:layout_constraintEnd_toEndOf="@+id/pg"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/pg"
        app:layout_constraintTop_toTopOf="@+id/pg"
        app:layout_constraintVertical_bias="0.504" />

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/logo_clean"
        app:layout_constraintBottom_toBottomOf="@+id/pg"
        app:layout_constraintEnd_toEndOf="@+id/pg"
        app:layout_constraintStart_toStartOf="@+id/pg"
        app:layout_constraintTop_toTopOf="@+id/pg" />
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/pg"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_gravity="center"
        app:indicatorColor="#52B6FA"
        app:indicatorInset="0dp"
        app:indicatorSize="126dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:trackColor="#EBF5FF"
        app:trackThickness="6dp"
        tools:progress="40" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Scaningâ€¦"
        android:textColor="#FF606060"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pg" />


</androidx.constraintlayout.widget.ConstraintLayout>


